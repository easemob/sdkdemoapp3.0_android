<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_add_admin"
        >
        <TextView
            android:text="add to administrator"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_rm_admin"
        >
        <TextView
            android:text="remove admin privilege"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_transfer_owner"
        >
        <TextView
            android:text="transfer owner ship"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_remove_member"
        >
        <TextView
            android:text="remove member"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_add_to_blacklist"
        >
        <TextView
            android:text="add to black list"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_remove_from_blacklist"
        >
        <TextView
            android:text="remove from black list"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_mute"
        >
        <TextView
            android:text="mute"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>


    <LinearLayout
        style="@style/chat_room_menu_item_wrapper"
        android:id="@+id/menu_item_unmute"
        >
        <TextView
            android:text="unmute"
            style="@style/chat_room_menu_item_text_style"/>
        <TextView style="@style/chat_room_menu_item_splitter"/>
    </LinearLayout>

</LinearLayout>